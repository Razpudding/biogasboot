<%- include partials/head.ejs %>
<main>
  <form method="post" action="/auth/register">
    <% if (locals.errors) {%>
      <% errors.forEach(error => { %>
        <div class="error"><%= error.msg %></div>
      <% }) %>
    <% } %>

    <label for="name">Naam</label>
    <input id="name" type="text" class="form-control" placeholder="Name" name="name">

    <label for="username">Gebruikersnaam</label>
    <input id="username" type="text" class="form-control" placeholder="Username" name="username">

    <label for="email">Email</label>
    <input id="email" type="email" class="form-control" placeholder="Email" name="email">

    <label for="role">Rol</label>
    <select class="role" id="role" name="role">
      <option value="admin">Admin</option>
      <option value="operator">Operator</option>
    </select>


    <label for="password">Wachtwoord</label>
    <input id="password" type="password" class="form-control" placeholder="Password" name="password">

    <label for="password2">Herhaal wachtwoord</label>
    <input id="password2" type="password" class="form-control" placeholder="Password" name="password2">

    <footer>
      <button type="submit" class="btn btn-default">Registreren</button>
    </footer>
  </form>
</main>

