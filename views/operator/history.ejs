            <td>Apparaat</td>
            <td>Min.</td>
            <td class="WhHead">Wh</td>
            <td class="kWhHead">kWh</td>
            <td>Min.</td>
            <td class="WhHead">Wh</td>
            <td class="kWhHead">kWh</td>
          </tr>
        </thead>
        <tbody>
          <tr id="Storagetank_Mixe">
            <td>Storagetank Mixe</td>
            <td class="first timeON">-</td>
            <td class="first kWh">-</td>
            <td class="first Wh">-</td>
            <td class="second timeON">-</td>
            <td class="second kWh">-</td>
            <td class="second Wh">-</td>
          </tr>
