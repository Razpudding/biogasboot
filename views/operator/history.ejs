<%- include ../partials/head.ejs %>

<main class="history">
  <aside>
    <section class="range-selector">
      <form>
        <fieldset>
          <h2>Eerste maand</h2>

          <label>
            <div>Jaar</div>
            <select name="firstYear" id="firstYear">
              <option value='2015'>2015</option>
              <option selected value='2016'>2016</option>
              <option value='2017'>2017</option>
            </select>
          </label>

          <label>
            <div>Maand</div>
            <select name="firstMonth" id="firstMonth">
              <option value='1'>Janaury</option>
              <option value='2'>February</option>
              <option value='3'>March</option>
              <option value='4'>April</option>
              <option value='5'>May</option>
              <option selected value='6'>June</option>
              <option value='7'>July</option>
              <option value='8'>August</option>
              <option value='9'>September</option>
              <option value='10'>October</option>
              <option value='11'>November</option>
              <option value='12'>December</option>
            </select>
          </label>
        </fieldset>

        <label class="compare" for="compare-checkbox">Vergelijken</label>
        <input type="checkbox" id="compare-checkbox">

        <fieldset>
          <h2>Tweede maand</h2>
          <label>
            <div>Jaar</div>
            <select name="secondYear" id="secondYear">
              <option value='2015'>2015</option>
              <option selected value='2016'>2016</option>
              <option value='2017'>2017</option>
            </select>
          </label>

          <label>
            <div>Maand</div>

            <select name="secondMonth" id="secondMonth">
              <option selected value='0'>Selecteer maand</option>
              <option value='1'>Janaury</option>
              <option value='2'>February</option>
              <option value='3'>March</option>
              <option value='4'>April</option>
              <option value='5'>May</option>
              <option value='6'>June</option>
              <option value='7'>July</option>
              <option value='8'>August</option>
              <option value='9'>September</option>
              <option value='10'>October</option>
              <option value='11'>November</option>
              <option value='12'>December</option>
            </select>
          </label>
        </fieldset>
      </form>
    </section>
    <section id="compare">
      <table id="compareTable">
        <tr>
          <th></th>
          <th colspan="2">Eerste maand</th>
          <th colspan="2">Tweede maand</th>
        </tr>
        <tr id="indicatorsTable">
          <td>Apparaat</td>
          <td>Min.</td>
          <td>kWH</td>
          <td>Min.</td>
          <td>kWH</td>
        </tr>
        <tr id="Storagetank_Mixe">
          <td>Storagetank_Mixe</td>
          <td class="first timeON">-</td>
          <td class="first kWh">-</td>
          <td class="second timeON">-</td>
          <td class="second kWh">-</td>
        </tr>
        <tr id="Storagetank_Feed">
