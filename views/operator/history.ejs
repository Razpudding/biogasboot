<%- include ../partials/head.ejs %>

<main class="history">
  <aside>
    <section class="range-selector">
      <form>
        <fieldset>
          <h2>Eerste maand</h2>

          <label>
            <div>Jaar</div>
            <select name="firstYear" id="firstYear">
              <option value='2015'>2015</option>
              <option selected value='2016'>2016</option>
              <option value='2017'>2017</option>
            </select>
          </label>

          <label>
            <div>Maand</div>
            <select name="firstMonth" id="firstMonth">
              <option value='1'>January</option>
              <option value='2'>February</option>
              <option value='3'>March</option>
              <option value='4'>April</option>
              <option value='5'>May</option>
              <option selected value='6'>June</option>
              <option value='7'>July</option>
              <option value='8'>August</option>
              <option value='9'>September</option>
              <option value='10'>October</option>
              <option value='11'>November</option>
              <option value='12'>December</option>
            </select>
          </label>
        </fieldset>

        <input type="checkbox" id="compare-checkbox">
        <label class="compare" for="compare-checkbox">
          Vergelijken
        </label>

        <fieldset>
          <h2>Tweede maand</h2>
          <label>
            <div>Jaar</div>
            <select name="secondYear" id="secondYear">
              <option value='2015'>2015</option>
              <option selected value='2016'>2016</option>
              <option value='2017'>2017</option>
            </select>
          </label>

          <label>
            <div>Maand</div>

            <select name="secondMonth" id="secondMonth">
              <option selected value='0'>Selecteer maand</option>
              <option value='1'>January</option>
              <option value='2'>February</option>
              <option value='3'>March</option>
              <option value='4'>April</option>
              <option value='5'>May</option>
              <option value='6'>June</option>
              <option value='7'>July</option>
              <option value='8'>August</option>
              <option value='9'>September</option>
              <option value='10'>October</option>
              <option value='11'>November</option>
              <option value='12'>December</option>
            </select>
          </label>
        </fieldset>
      </form>
    </section>
    <section id="compare">
      <label class="energyMargin">Energie verbruik eenheid:</label>
      <input class="energyMargin" type="radio" name="energy" value="Wh" id="WhCheck" checked> Wh
      <input class="energyMargin" type="radio" name="energy" value="kWh" id="kWhCheck"> kWh
      <table id="compareTable">
        <thead>
          <tr class="tableHead">
            <th></th>
            <th colspan="2">Eerste maand</th>
            <th colspan="2">Tweede maand</th>
          </tr>
